    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/entryToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.PopupOverlay"
            android:visibility="visible"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/customToolbar"
            app:theme="@style/customToolbar"
            app:titleTextAppearance="@style/Toolbar.TitleText" />
    </android.support.design.widget.AppBarLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/item_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <EditText
            android:id="@+id/itemEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/foodEntry"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/quantityText"
        android:id="@+id/quantityTextView"
        android:layout_alignTop="@+id/expirationTextView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="5"
        android:height="48dp"
        android:layout_marginStart="16dp"
        android:gravity="center_horizontal"
        android:hint="@string/enterHereText"
        android:id="@+id/quantityAmtEditText"
        android:layout_below="@+id/quantityTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expirationEntry"
        android:id="@+id/expirationTextView"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/item_input_layout"
        android:layout_alignEnd="@+id/item_input_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expirationEntryDate"
        android:id="@+id/expirationDateTextView"
        android:height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/expirationTextView"
        android:layout_alignStart="@+id/expirationTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categorySelect"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/categoryTextView"
        android:layout_below="@+id/expirationDateTextView"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoryTextView"
        android:minWidth="400dp"
        android:id="@+id/categorySpinner"
        android:spinnerMode="dropdown"
        android:minHeight="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:entries="@array/category_array"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/takePicture"
        android:id="@+id/addPhotoTextView"
        android:layout_below="@+id/categorySpinner"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodImageView"
        android:layout_below="@+id/addPhotoTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        />

</RelativeLayout>
