<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="edu.fe.EntryFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foodEntry"
        android:id="@+id/textView1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/editText"
        android:hint="@string/hintFoodEntry"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categorySelect"
        android:layout_marginTop="20dp"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:minWidth="400dp"
        android:entries="@array/category_array"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expirationEntry"
        android:layout_marginTop="20dp"
        android:id="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="20"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:id="@+id/editText2"
        android:text="@string/expirationEntryDate"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/textView3" />

</LinearLayout>
